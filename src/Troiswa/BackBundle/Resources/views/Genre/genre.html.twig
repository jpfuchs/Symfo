
{% extends  "TroiswaBackBundle::layout.html.twig" %}

{% block css %}
{{ parent() }}
{% endblock %}

{% block titre %} acteur {{ parent() }}
{% endblock %}


{% block central %}

    <div id="page-wrapper">

        <div class="container-fluid">

            <!-- Page Heading -->
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">
                        Tous les genres {{ genres |length }} dans la table
                    </h1>
                    <ol class="breadcrumb">
                        <li>
                            <i class="fa fa-dashboard"></i>  <a href="{{ path("troiswa_back_admin")  }}">Dashboard</a>
                        </li>
                        <li class="active">
                            <i class="fa fa-table"></i> Genres
                        </li>
                    </ol>
                </div>
            </div>
            <!-- /.row -->

            {%  for message in app.session.flashbag.get("sucess_genre") %}

                <p class="alert alert-success">{{ message }}</p>

            {% endfor %}


            <a class="btn btn-success" href="{{ path("troiswa_back_create_genre")  }}" >Creer un nouveau genre</a>


            <div class="row">
                <div class="col-lg-6">
                    <h2>Bordered Table</h2>
                    <div class="table-responsive">

                        <table class="table table-bordered table-hover">

                            <thead>
                            <tr>
                                <th>id</th>
                                <th>Type</th>
                                <th>Description</th>

                                <th>Action</th>
                            </tr>
                            </thead>


                            <tbody>

                              {#  {{ dump(acteurs) }}  #}

                            {% for unGenre in genres %}


                                <tr>
                                <td> {{ unGenre.id }} </td>
                                <td> {{ unGenre.Type }} </td>
                                    <td> {{ unGenre.Description }} </td>
                                    <!--<td> <img src="{" {#{{ asset(unActeur.displayImage) }} #}"> </td> -->



                                 <td>
                                     <a class="btn btn-success" href="{{ path("troiswa_back_info_genre",{"id":unGenre.id}) }}" >Voir</a>
                                     <a class="btn btn-primary" href="{{ path("troiswa_back_modifier_genre",{"id":unGenre.id}) }}" >Modifier</a>
                                     <a class="btn btn-danger" href="" >Supprimer</a>
                                 </td>


                                </tr>

                            {% endfor %}

                            </tbody>

                        </table>

                    </div>
                </div>

        </div>
        <!-- /.container-fluid -->

    </div>
    <!-- /#page-wrapper -->


{% endblock %}



    {% block javascript %}
    {{ parent() }}


    {% endblock %}
