
{% extends  "TroiswaBackBundle::layout.html.twig" %}

{% block css %}
{{ parent() }}
{% endblock %}

{% block titre %} acteur {{ parent() }}
{% endblock %}


{% block central %}

    <div id="page-wrapper">

        <div class="container-fluid">

            <!-- Page Heading -->
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">
                        Tous les acteurs
                    </h1>
                    <ol class="breadcrumb">
                        <li>
                            <i class="fa fa-dashboard"></i>  <a href="index.html">Dashboard</a>
                        </li>
                        <li class="active">
                            <a href="{{ path('troiswa_back_acteur') }}"><i class="fa fa-fw fa-dashboard"></i> Acteurs</a>
                            <i class="fa fa-table"></i> UnActeur
                        </li>
                    </ol>
                </div>
            </div>
            <!-- /.row -->





            <div class="row">
                <div class="col-lg-6">
                    <h2>Bordered Table</h2>
                    <div class="table-responsive">

                        <table class="table table-bordered table-hover">

                            <thead>
                            <tr>
                                <th>id</th>
                                <th>Nom</th>
                                <th>Prenom</th>
                                <th>Sexe</th>
                                <th>Date</th>
                                <th>Biographie</th>
                                <th>Ville</th>
                                <th>Action</th>
                            </tr>
                            </thead>


                            <tbody>




                                {{  acteurs.id }}
                                {{  acteurs.nom }}
                                <tr>
                                <td> {{ acteurs.id }} </td>
                                <td> {{ acteurs.nom }} </td>
                                <td> {{ acteurs.prenom }} </td>
                                <td>
                                    {% if acteurs.sexe == 1 %}
                                       homme
                                    {%  else %}
                                      femme
                                    {%  endif  %}

                                </td>
                                    <td> {{ acteurs.dateNaissance  | date("m/d/Y") }} </td>
                                    <td> {{ acteurs.biographie }} </td>
                                    <td> {{ acteurs.ville }} </td>

                                    <td>
                                     <a class="btn btn-success" href="" >Voir</a>
                                     <a class="btn btn-primary" href="" >Modifier</a>
                                     <a class="btn btn-danger" href="" >Supprimer</a>
                                 </td>


                                </tr>



                            </tbody>

                        </table>

                    </div>
                </div>

        </div>
        <!-- /.container-fluid -->

    </div>
    <!-- /#page-wrapper -->


{% endblock %}



    {% block javascript %}
    {{ parent() }}


    {% endblock %}
